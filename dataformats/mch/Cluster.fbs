namespace o2.mch;

table ClusterPos {
  x: float;
  y: float;
  z: float;
}

table PreCluster {
  digitBendingIds:[int];
  digitNonBendingIds:[int];
}

table Cluster {
  pre: PreCluster;
  pos: ClusterPos;
  charge: float;
}

table ClusterTimeBlock {
  timestamp: int;
  clusters:[Cluster];
}

table ClusterDE {
  detElemId: int;
  clusterTimeBlocks:[ClusterTimeBlock];
}

root_type ClusterDE;

